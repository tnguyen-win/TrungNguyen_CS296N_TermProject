<div class="col">
    <div class="card h-100 border border-secondary-subtle shadow-lg">
        <p class="bg-light-subtle fw-bold shadow-lg text-center mb-0 p-3">@Model.Title</p>
        <div class="position-relative">
            <div class="position-absolute top-0 end-0 m-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cart4 @(Model.InCart ? "text-success" : "text-secondary")" viewBox="0 0 16 16">
                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                </svg>
            </div>
        </div>
        <div class="d-flex flex-column text-start m-3 mb-3">
            @* PRODUCT ID *@
            <small><span class="fw-bold">ID:</span> @Model.ItemId</small>
            @* GENRE *@
            <small><span class="fw-bold">GENRE:</span> @Model.Genre</small>
            @* RELEASE YEAR *@
            <small><span class="fw-bold">RELEASE YEAR:</span> @Model.ReleaseYear</small>
            @* PRICE *@
            <small><span class="fw-bold">PRICE:</span> $@Model.Price</small>
            @* AGE RATING *@
            <small><span class="fw-bold">AGE RATING:</span> @Model.AgeRange</small>
            @* CONDITION *@
            <small><span class="fw-bold">CONDITION:</span> @Model.Condition</small>
            @* FROM *@
            <small><span class="fw-bold">OWNER:</span> @Model.From.Name</small>
            <a class="btn btn-warning rounded-0 text-dark fw-bold mt-3" href="/shop/product/@Model.ItemId">VIEW</a>
        </div>
    </div>
</div>
